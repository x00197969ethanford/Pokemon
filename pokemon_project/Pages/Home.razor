@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">

    <MudStack AlignItems="AlignItems.Center" Class="mb-6">
        <MudText Style="font-size: 2rem;" Class="fw-bold">Pokémon Project</MudText>
        <MudText>
            Explore stats, find matches, and discover new Pokémon.
        </MudText>
    </MudStack>

    <MudGrid Spacing="4" Justify="Justify.Center">

        @Card(title: "Search Pokémon",
              description: "Look up stats, types, abilities, and sprites for any Pokémon.",
              pikachuImg,
              href: "/pokemon",
              Color.Primary,
              buttonText: "Start Searching")

        @Card(title: "Find Your Pokémon Twin",
                    description: "Enter your height and weight to discover your closest Pokémon match.",
                    snorlaxImg,
                    href: "/matchme",
                    Color.Success,
                    buttonText: "Find Match")

        @Card(title: "Top Pokémon",
              description: "Filter Pokémon by their stats to find the top in their category.",
              giratinaImg,
              href: "/top12",
              Color.Secondary,
              buttonText: "Discover ")

        

    </MudGrid>

</MudContainer>

@code {

    RenderFragment Card(
        string title,
        string description,
        string image,
        string href,
        Color color,
        string buttonText) => __builder =>
    {
        <MudItem xs="12" sm="6" md="4" Class="d-flexS">
            <MudCard Class="home-card">
                <MudCardMedia Image="@image" Height="160" Class="media-cover" />
                <MudCardContent>
                    <MudText Style="font-size: 1.1rem;" Class="mb-1 fw-bold">@title</MudText>
                    <MudText Typo="Typo.body2">@description</MudText>
                </MudCardContent>
                <MudCardActions Class="pb-3 ps-3">
                    <MudButton Color="@color" Variant="Variant.Filled" Href="@href">
                        @buttonText
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>;
    };

    string pikachuImg  = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/25.png";
    string giratinaImg = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/487.png";
    string snorlaxImg   = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/143.png";
}



