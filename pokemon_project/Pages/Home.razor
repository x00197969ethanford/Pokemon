@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">

    <MudStack AlignItems="AlignItems.Center" Class="mb-6">
        <MudText Typo="Typo.h3" Class="fw-bold">Pokémon Project</MudText>
        <MudText Typo="Typo.subtitle1">
            Explore stats, find matches, and discover new Pokémon.
        </MudText>
    </MudStack>

    <MudGrid Spacing="4" Justify="Justify.Center">

        @Card(title: "Search Pokémon",
              description: "Look up stats, types, abilities, and sprites for any Pokémon.",
              pikachuImg,
              href: "",
              Color.Primary,
              buttonText: "")


    </MudGrid>

</MudContainer>

@code {

    RenderFragment Card(
        string title,
        string description,
        string image,
        string href,
        Color color,
        string buttonText) => __builder =>
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="home-card">
                <MudCardMedia Image="@image" Height="160" Class="media-cover" />
                <MudCardContent>
                    <MudText Typo="Typo.h6" Class="mb-1">@title</MudText>
                    <MudText Typo="Typo.body2">@description</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>;
    };

    string pikachuImg  = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/25.png";
    string bulbasaurImg = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png";
    string snorlaxImg   = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/143.png";
}





